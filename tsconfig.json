{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true, 
        "noUnusedLocals": true,
        "noImplicitReturns": true, 
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "plugins": [
            {
              "name": "typescript-tslint-plugin"
            }
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "docs"
    ]
}