{
    "name": "cmake-server",
    "displayName": "cmake-server",
    "description": "CMake based Language Server.",
    "version": "0.0.1",
    "publisher": "go2sh",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/CMakeLists.txt",
        "onCommand:cmake-server.configureCurrentProject",
        "onCommand:cmake-server.buildCurrentTarget",
        "onCommand:cmake-server.configureProject",
        "onCommand:cmake-server.buildTarget"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "cmake-server.configureCurrentProject",
                "title": "Configure current project",
                "category": "Build"
            },
            {
                "command": "cmake-server.buildCurrentTarget",
                "title": "Build current target",
                "category": "Build"
            },
            {
                "command": "cmake-server.configureProject",
                "title": "Configure workspace",
                "category": "Build"
            },
            {
                "command": "cmake-server.buildTarget",
                "title": "Build target",
                "category": "Build"
            },
            {
                "command": "cmake-server.selectProject",
                "title": "Select CMake Project"
            },
            {
                "command": "cmake-server.selectTarget",
                "title": "Select CMake Target"
            },
            {
                "command": "cmake-server.selectBuildType",
                "title": "Select CMake Build Type"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "CMake Configuration",
            "properties": {
                "cmake-server.buildTypes": {
                    "type": "array",
                    "description": "Add additional Build Types",
                    "title": "Additional Build Types",
                    "items": {
                        "type": "string"
                    }
                },
                "cmake-server.generator": {
                    "type":"string",
                    "title": "Build System Generator",
                    "description": "Select a build system generator",
                    "enum": [
                        "Ninja",
                        "Unix Makefiles",
                        "Borland Makefiles",
                        "MSYS Makefiles",
                        "MinGW Makefiles",
                        "NMake Makefiles",
                        "NMake Makefiles JOM",
                        "Watcom WMake",
                        "Visual Studio 6",
                        "Visual Studio 7",
                        "Visual Studio 7 .NET 2003",
                        "Visual Studio 8 2005",
                        "Visual Studio 9 2008",
                        "Visual Studio 10 2010",
                        "Visual Studio 11 2012",
                        "Visual Studio 12 2013",
                        "Visual Studio 14 2015",
                        "Visual Studio 15 2017",
                        "Xcode",
                        "Green Hills MULTI"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "vscode-languageclient": "^5.1.1",
        "vscode-languageserver": "^5.1.0"
    }
}
